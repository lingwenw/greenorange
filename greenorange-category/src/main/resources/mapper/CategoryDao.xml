<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wpp.greenorange.dao.CategoryDao">

    <resultMap type="com.wpp.greenorange.domain.Category" id="categoryMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="parentId" column="parent_id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="deleted" column="deleted" jdbcType="BOOLEAN"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <collection property="categories"
                    select="findCategorys"
                    column="id">
        </collection>
    </resultMap>

    <!--级联查询所有数据-->
    <select id="findCategorys" resultMap="categoryMap" >
        select
          id, parent_id, name, deleted, create_time, update_time
        from greenorange.tb_category
        where parent_id = #{id}
--         and deleted = false
    </select>
    <!--查询单个-->
    <select id="findById" resultMap="categoryMap">
        select
          id, parent_id, name, deleted, create_time, update_time
        from greenorange.tb_category
        where id = #{id}
    </select>


    <!--通过实体作为筛选条件查询-->
    <select id="findAllByCondition" resultMap="categoryMap">
        select
        id, parent_id, name, deleted, create_time, update_time
        from greenorange.tb_category
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="parentId != null">
                and parent_id = #{parentId}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="deleted != null">
                and deleted = #{deleted}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
            <if test="updateTime != null">
                and update_time = #{updateTime}
            </if>
        </where>
    </select>


    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into greenorange.tb_category(parent_id, name, deleted, create_time, update_time)
        values (#{parentId}, #{name}, #{deleted}, #{createTime}, #{updateTime})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update greenorange.tb_category
        <set>
            <if test="parentId != null">
                parent_id = #{parentId},
            </if>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="deleted != null">
                deleted = #{deleted},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from greenorange.tb_category where id = #{id}
    </delete>

</mapper>